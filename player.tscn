script/source = "extends CharacterBody2D

var isCube = true
var isWave = false
var isBall = false
var isUFO = false

var SPEED = 35500.0
var JUMP_VELOCITY = -1000.0

var isOrb = false
var forceOrb = 0
var canInvert = false

var isDash = false
var tempGravity = 0
var tempJumpVelocity = 0

var gravity = 4100

func _physics_process(delta):
	if isCube == true :
		# Add the gravity
		if not is_on_floor() and not is_on_ceiling():
			velocity.y += gravity * delta
			$Sprite2D.rotation_degrees += 380 * delta
		else :
			var module = int($Sprite2D.rotation_degrees) % 90;
			if module > 45 :
				$Sprite2D.rotation_degrees += (90 - module)
			else :
				$Sprite2D.rotation_degrees -= module
		# Handle jump.
		if Input.is_action_pressed(\"ui_accept\") and is_on_floor():
			velocity.y = JUMP_VELOCITY
		if Input.is_action_pressed(\"ui_accept\") and is_on_ceiling():
			velocity.y = JUMP_VELOCITY
		
		velocity.x = SPEED * delta
		
		if isOrb and Input.is_action_just_pressed(\"ui_accept\"):
			velocity.y = -forceOrb
			if canInvert == true :
				gravity = -gravity
				JUMP_VELOCITY = -JUMP_VELOCITY
				isOrb = false
				rotation = -rotation
				canInvert = false
			
		if isDash and Input.is_action_just_pressed(\"ui_accept\"):
			tempGravity = gravity
			tempJumpVelocity = JUMP_VELOCITY
			if Input.is_action_pressed(\"ui_accept\"):
				gravity = 0
				JUMP_VELOCITY = 0
				velocity.y = 0
			
		if isDash and Input.is_action_just_released(\"ui_accept\"):
				gravity = tempGravity
				JUMP_VELOCITY = tempJumpVelocity
				if canInvert == true :
					gravity = -gravity
					JUMP_VELOCITY = -JUMP_VELOCITY
					rotation = -rotation
				velocity.y += gravity * delta
				isDash = false
			
		move_and_slide()
		
	if isWave == true :
		var direction = Vector2.ZERO
		$Sprite2D.rotation = 0
		if canInvert == false :
			if Input.is_action_pressed(\"ui_accept\"):
				velocity.y = JUMP_VELOCITY
				if not is_on_ceiling():
					$Sprite2D.rotation += move_toward(rotation_degrees, 3.14159/4, SPEED)
				else :
					$Sprite2D.rotation += move_toward(rotation_degrees, 3.14159/2, SPEED)
			else :
				velocity.y = -JUMP_VELOCITY
				if not is_on_floor():
					$Sprite2D.rotation += move_toward(rotation_degrees, 3.14159*3/4, SPEED)
				else :
					$Sprite2D.rotation += move_toward(rotation_degrees, 3.14159/2, SPEED)
			
		if canInvert == true :
			if Input.is_action_pressed(\"ui_accept\"):
				velocity.y = -JUMP_VELOCITY
				if not is_on_floor():
					$Sprite2D.rotation += move_toward(rotation_degrees, 3.14159*3/4, SPEED)
				else :
					$Sprite2D.rotation += move_toward(rotation_degrees, 3.14159/2, SPEED)
			else :
				velocity.y = JUMP_VELOCITY
				if not is_on_ceiling():
					$Sprite2D.rotation += move_toward(rotation_degrees, 3.14159/4, SPEED)
				else :
					$Sprite2D.rotation += move_toward(rotation_degrees, 3.14159/2, SPEED)
			
		velocity.x = SPEED * delta
		move_and_slide()

func Explode():
	SPEED = 0
	JUMP_VELOCITY = 0
	$Sprite2D.visible = false
	$AudioStreamPlayer2D.stop()
	$Timer.start()

func _on_timer_timeout():
	get_tree().reload_current_scene()

func _on_external_area_entered(area: Area2D) -> void:
	if area.is_in_group(\"orb\") :
		isOrb = true
		forceOrb = area.force
		canInvert = area.invert
		
	if area.is_in_group(\"pad\") :
		velocity.y = -area.force
		if area.invert == true :
			gravity = -gravity
			JUMP_VELOCITY = -JUMP_VELOCITY
			rotation = -rotation
		
	if area.is_in_group(\"dash\") :
		isDash = true
		canInvert = area.invert
		
	if area.is_in_group(\"portal\") :
		match area.type :
			0 :
				$Sprite2D.texture = load(\"res://Sprites/Cube.webp\")
				isCube = true
				isWave = false
				isBall = false
				isUFO = false
			1 :
				$Sprite2D.texture = load(\"res://Sprites/Wave.webp\")
				isCube = false
				isWave = true
				isBall = false
				isUFO = false
			2 :
				$Sprite2D.texture = load(\"res://Sprites/Ball.webp\")
				isCube = false
				isWave = false
				isBall = true
				isUFO = false
			3 :
				$Sprite2D.texture = load(\"res://Sprites/Ball.webp\")
				isCube = false
				isWave = false
				isBall = false
				isUFO = true
			4 :
				canInvert = true
			5 :
				canInvert = false
		
	if area.is_in_group(\"speed\") :
		match area.type :
			0 :
				SPEED = 35500 * .5
			1 :
				SPEED = 35500
			2 :
				SPEED = 35500 * 2
			3 :
				SPEED = 35500 * 3
			4 :
				SPEED = 35500 * 4

func _on_external_area_exited(area: Area2D) -> void:
	if area.is_in_group(\"orb\") :
		isOrb = false
		forceOrb = 0
		canInvert = false
		
	if area.is_in_group(\"dash\") and not Input.is_action_pressed(\"ui_accept\") :
		isDash = false
		canInvert = false
"

